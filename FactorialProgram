// "static void main" must be defined in a public class.
public class Main {
    public static void main(String[] args) {
        int n = 5;
        int fact = factorialUsingRecursion(n);
        System.out.println(fact);
        fact = factorialIterativeMethod(n);
        System.out.println(fact);
    }
    public static int factorialUsingRecursion(int n){
       if(n==1 || n==0)
           return 1;
        else 
          return n*factorialUsingRecursion(n-1);        
    }
    
    public static int factorialIterativeMethod(int n){
        int fact = 1;
        if(n==1 || n==0)
           return fact;
        else{
            for(int i=2;i<=n;i++){
                fact= fact*i;
            }
           return fact;
        }
    }
    
}
